<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff22563d"

    tools:context="joelschuman.ex1.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView android:text="@string/about_text"

            android:layout_width="wrap_content"
            android:textSize="28sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#fff3f3f3" />
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="fill_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/okay_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/okay_button"
                android:onClick="returnToMainActivity"
                android:layout_gravity="center_horizontal" /></LinearLayout></LinearLayout>

</LinearLayout>
